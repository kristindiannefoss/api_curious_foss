<!-- About Section -->
<section id="about" class="container content-section text-left dash" id="dash">
    <div class="row">
        <!-- <div class="col-lg-8 col-lg-offset-2"> -->
            <div class="dash">
              <h2>Hi <%= @name %></h2>

              <%= image_tag @user.image_url, class: "img-circle dashb", width: "200px" %>
            </div>

            <div class="email-list">
              <table class="table table-striped sized-table">
                <tr>
                  <th>
                    <h4>From:</h4>
                  </th>
                  <th>
                    <h4>Subject:</h4>
                  </th>
                  <th>
                    <h4>Time Recieved:</h4>
                  </th>
                </tr>
                <% @inbox.each do |message| %>
                <%#= binding.pry %>
                <tr>
                  <td>
                    <!-- <h4><%#= message["payload"]["headers"][15].fetch("value").match("(<[^>]+>)")[1].gsub("<","").gsub(">","") %></h4> -->
                    <h4><%= message["payload"]["headers"].keep_if {|header| header["name"] == "From"}.first["value"] .match("(<[^>]+>)")[1].gsub("<","").gsub(">","") %></h4>
                  </td>
                  <td>
                    <h4><%= message["payload"]["headers"].keep_if {|header| header["name"] == "Subject"}.first["value"] %></h4>
                  </td>
                  <td>
                    <!-- <h4><%#= message["payload"]["headers"][7].fetch("value").split(";")[1] %></h4> -->
                    <h4><%= message["payload"]["headers"].keep_if {|header| header["name"] == "Date"}.first["value"] %></h4>
                  </td>
              </tr>
              <% end %>

              </table>
              <%#= @user. %>
            </div>

            <%#= @inbox %>
